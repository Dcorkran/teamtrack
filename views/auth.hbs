<div class="container">
    <div class="row">
      <div class="col-xs-5 form-container panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Sign-In</h3>
        </div>
        <div class="panel-body">
        <form action="/auth/sign-in" method="post">
        <div class="form-group">
          <label for="email-sign-in">Email</label>
          <input name="email"type="email" class="form-control" id="email-sign-in" required>
        </div>
        <div class="form-group">
          <label for="password-sign-in">Password</label>
          <input name="password"type="password" class="form-control" id="password-sign-in"required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    </div>
    <div class="col-xs-5 col-xs-offset-1 form-container panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Sign-Up</h3>
      </div>
      <div class="panel-body">
        <form action="/auth/new-user" method="post">
          <div class="row">
            <div class="col-xs-6">
              <div class="form-group">
                <label for="first-name-sign-up">First Name</label>
                <input name="first_name"type="text" class="form-control" id="first-name-sign-up" placeholder="Jane" required>
              </div>
            </div>
            <div class="col-xs-6">
              <div class="form-group">
                <label for="last-name-sign-up">Last Name</label>
                <input name="last_name"type="text" class="form-control" id="last-name-sign-up" placeholder="Doe" required>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-6">
              <div class="form-group">
                <label for="email-sign-up">Email</label>
                <input name="email"type="email" class="form-control" id="email-sign-up" required>
              </div>
            </div>
            <div class="col-xs-6">
              <div class="form-group">
                <label for="password-sign-up">Password</label>
                <input name="password"type="password" class="form-control" id="password-sign-up" required>
              </div>
            </div>
          </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      </div>
  </div>
  </div>
</div>
